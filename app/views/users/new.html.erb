<h1>New User</h1>

<%= form_for :user, url: users_path do |f| %>

  
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  
  <p>
      <%= f.label :password %><br>
      <%= f.text_field :password %>
  </p>
  
  <p>
      <%= f.label :repeat_password %><br>
      <%= f.text_field :repeat_password %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>

<p>
<%= link_to 'Back', 'welcome#index' %>
</p>